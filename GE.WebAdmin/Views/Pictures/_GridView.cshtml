@model VMPicture[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMPicture)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<VMPicture>
    {
        UpdateTargetId = "grid-pictures",
        Data = Model,
        Columns = new SxExtantions.SxGridViewColumn[]{
            new SxExtantions.SxGridViewColumn{FieldName="Id", Caption="Идентификатор"},
            new SxExtantions.SxGridViewColumn{FieldName="Caption", Caption="Название"},
            new SxExtantions.SxGridViewColumn{FieldName="Description", Caption="Описание"},
            new SxExtantions.SxGridViewColumn{FieldName="Width", Caption="Ширина, px"},
            new SxExtantions.SxGridViewColumn{FieldName="Height", Caption="Высота, px"},
        },
        PagerInfo=pagerInfo,
        Filter = filter,
        SortDirections = sortDirections
    },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )