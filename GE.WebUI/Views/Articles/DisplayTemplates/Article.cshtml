@model Article
@{
    Layout = null;
    var info = new VMMateriallnfo
    {
        DateCreate = Model.DateCreate,
        CommentsCount = Model.CommentsCount,
        ViewsCount = Model.ViewsCount
    };
}

<figure class="mat-f-p">
    @if(Model.FrontPictureId!=null)
    {
        <img alt="@Model.Title" src="@Url.Action(MVC.Pictures.Picture((Guid)Model.FrontPictureId, width: 360))" />
    }
</figure>
<div class="content">
    <a class="link" href="@Url.Action(MVC.Articles.Details(Model.Id))" title="@Model.Title">@Model.Title</a>
    <p class="foreword">
        @Model.Foreword
    </p>
    <div class="info">
        <div class="row">
            <div class="col-md-6">
                @Html.DisplayFor(x => info)
            </div>
            <div class="col-md-6">
                <a class="btn btn-default btn-transparent dark-blue">Подробнее</a>
            </div>
        </div>
    </div>
</div>