@model VMNewsRubric[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMNewsRubric)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
    new SxExtantions.SxGridViewSettings<VMNewsRubric>
    {
        UpdateTargetId = "grid-news-rubrics",
        Data = Model,
        Columns = new SxExtantions.SxGridViewColumn[]{
           new SxExtantions.SxGridViewColumn{FieldName="Id", Caption="Значение"},
           new SxExtantions.SxGridViewColumn{FieldName="Description", Caption="Описание"}
        },
        PagerInfo = pagerInfo,
        Filter = filter,
        SortDirections = sortDirections,
        EnableDelete=true,
        GeneralControllerName="newsrubrics",
        DeleteLink=Url.Action(MVC.NewsRubrics.Delete())
    },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )