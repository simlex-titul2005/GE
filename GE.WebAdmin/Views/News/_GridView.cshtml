@model VMNews[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMNews)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<VMNews>
        {
            UpdateTargetId = "grid-news",
            Data = Model,
            Columns = new SxExtantions.SxGridViewColumn<VMNews>[]{
            new SxExtantions.SxGridViewColumn<VMNews>{FieldName="DateCreate", Caption="Дата создания"},
            new SxExtantions.SxGridViewColumn<VMNews>{FieldName="DateOfPublication", Caption="Дата публикации"},
            new SxExtantions.SxGridViewColumn<VMNews>{FieldName="Title", Caption="Заголовок"},
            new SxExtantions.SxGridViewColumn<VMNews>{FieldName="SeoInfoId", Caption="Инфо", Template=(m)=> {
                return !m.SeoInfoId.HasValue? "<i class=\"text-danger\">не заданы теги seo</i>":null;
            } },
            new SxExtantions.SxGridViewColumn<VMNews>{FieldName="Show", Caption="Показывать", Template=(m)=> {
                return m.Show? "Да":"Нет";
            } }
        },
            PagerInfo=pagerInfo,
            Filter = filter,
            SortDirections = sortDirections,
            FuncRowCssClass = (a) =>
            {
                return a.Show ? null : "warning";
            }
        },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )