@model VMSeoPhrase[]
@{
    ViewBag.Title = "Счетчик слов";
}

<h2>@ViewBag.Title</h2>

@using (Ajax.BeginForm("AddPhrases", "SeoWordCounter", new AjaxOptions { HttpMethod = "post", UpdateTargetId = "phrases" }))
{
    @Html.AntiForgeryToken()
    <label for="phrase">Текст для анализа</label>
    <textarea placeholder="Введите текст для анализа" name="text" id="text" style="min-height:100px;" class="form-control"></textarea>
    <div class="text-left">
        <br />
        <button type="submit" class="btn btn-default"><i class="fa fa-level-down"></i> Отпавить</button>
    </div>
}

<div id="phrases">
    @Html.Partial("_Table", Model)
</div>