@model VMGame[]
@{
    Layout = null;
    var filter = ViewBag.Filter != null ? (VMGame)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<VMGame>
    {
        UpdateTargetId = "grid-games",
        Data = Model,
        Columns = new SxExtantions.SxGridViewColumn[]{
            new SxExtantions.SxGridViewColumn{FieldName="TitleFull", Caption="Наименование игры"},
            new SxExtantions.SxGridViewColumn{FieldName="TitleAbbr", Caption="Краткое наименование игры"},
            new SxExtantions.SxGridViewColumn{FieldName="Description", Caption="Описание"},
            new SxExtantions.SxGridViewColumn{FieldName="Show", Caption="Показывать"},
        },
        Filter = filter,
        SortDirections = sortDirections
    },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )