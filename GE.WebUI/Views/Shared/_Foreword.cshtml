@model VMMaterial

<blockquote class="mat-fwd">
    <h2 class="ann">Аннотация</h2>
    <p class="fwd">@Model.Foreword</p>
    <p>
        Дата публикации: <strong>@Model.DateOfPublication.ToString("dd.MM.yyyy")</strong>
        <br />
        Отредактировано: <strong>@Model.DateUpdate.ToString("dd.MM.yyyy hh:mm")</strong>
        <br />
        @if (Model.User != null)
        {
            <div>Автор материала: <strong>@Model.User.NikName</strong></div>
        }
    </p>
    <p>Рейтинг:</p>
    @Html.SxRating(Model.Rating, Url.Action("AddRating", "Rating", new { mid = Model.Id, mct = Model.ModelCoreType }))
</blockquote>
