@model VMRoute[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMRoute)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
            new SxExtantions.SxGridViewSettings<VMRoute>
    {
        UpdateTargetId = "grid-routes",
        Data = Model,
        Columns = new SxExtantions.SxGridViewColumn<VMRoute>[]{
            new SxExtantions.SxGridViewColumn<VMRoute>{FieldName="Name", Caption="Наименование маршрута"},
            new SxExtantions.SxGridViewColumn<VMRoute>{FieldName="Controller", Caption="Контроллер"},
            new SxExtantions.SxGridViewColumn<VMRoute>{FieldName="Action", Caption="Действие"},
        },
        PagerInfo=pagerInfo,
        Filter = filter,
        SortDirections = sortDirections
    },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )