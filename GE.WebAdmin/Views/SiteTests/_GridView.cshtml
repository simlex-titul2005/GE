@model VMSiteTest[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMSiteTest)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<VMSiteTest>
        {
            UpdateTargetId = "site-tests",
            Data = Model,
            Columns = new SxExtantions.SxGridViewColumn<VMSiteTest>[]{
                new SxExtantions.SxGridViewColumn<VMSiteTest>{FieldName="DateCreate", Caption="Дата создания"},
                new SxExtantions.SxGridViewColumn<VMSiteTest>{FieldName="Title", Caption="Заголовок"}
            },
            PagerInfo=pagerInfo,
            Filter = filter,
            SortDirections = sortDirections
        },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )