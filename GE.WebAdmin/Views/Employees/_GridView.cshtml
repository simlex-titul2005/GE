@model VMEmployee[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMEmployee)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<VMEmployee>
        {
            UpdateTargetId = "grid-employees",
            Data = Model,
            Columns = new SxExtantions.SxGridViewColumn<VMEmployee>[]{
            new SxExtantions.SxGridViewColumn<VMEmployee>{FieldName="Email", Caption="Email"},
            new SxExtantions.SxGridViewColumn<VMEmployee>{FieldName="NikName", Caption="Ник"}
        },
            PagerInfo=pagerInfo,
            Filter = filter,
            SortDirections = sortDirections,
            EnableCreate=false
        },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )