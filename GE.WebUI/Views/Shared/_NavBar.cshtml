@{ 
    var siteName = GE.WebUI.Infrastructure.SiteSettings.Get(SX.WebCore.Resources.Settings.siteName);
    var logoUrl = GE.WebUI.Infrastructure.SiteSettings.Get(SX.WebCore.Resources.Settings.siteLogoPath);
}
<nav class="navbar navbar-default">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">
                <img alt="@siteName.Value" src="@logoUrl.Value">
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Главная <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/">Вернутся на главную</a></li>
                        <li><a href="#">Выбрать игру</a></li>
                        <li><a href="@Url.Action("List", "News")">Почитать новости</a></li>
                        <li><a href="@Url.Action("List", "Articles")">Почитать статьи</a></li>
                        <li><a href="@Url.Action("List", "Aphorisms")">Кратко о главном</a></li>
                        <li><a href="@Url.Action("Edit", "SiteQuetions")">Обратная связь</a></li>
                        @*<li><a href="#">Почитать форум</a></li>*@
                    </ul>
                </li>
                <li>
                    <a href="@Url.Action("List", "News")">Новости</a>
                </li>
                <li>
                    <a href="@Url.Action("List", "Articles")">Статьи</a>
                </li>
                <li>
                    <a href="@Url.Action("List", "Aphorisms")">Кратко</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <form method="post" action="@Url.Action("LogOff","Account")" class="hidden">
                            @Html.AntiForgeryToken()
                        </form>
                        <a href="javascript:void(0)" onclick="$(this).prev('form').submit();">Выход</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="@Url.Action("Login","Account")" rel="nofollow">Вход</a>
                    </li>
                }
                <li>
                    <a href="@Url.Action("Register","Account")" rel="nofollow">Регистрация</a>
                </li>
            </ul>
            @Html.Partial("~/Views/Search/_Search.cshtml")
        </div>
    </div>
</nav>