@model SxVMBreadcrumb[]
@{
    Layout = null;
}

@if (Model != null && Model.Any())
{
    <ul class="breadcrumb">
        @for (int i = 0; i < Model.Length; i++)
        {
            var item = Model[i];
            <li>
                @if (i < Model.Length-1)
                {
                    <a href="@item.Url" title="@item.Title">@item.Title</a>
                }
                else
                {
                    <span>@item.Title</span>
                }
            </li>
        }
    </ul>
}