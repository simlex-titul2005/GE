@{
    Layout = null;
    var bgUrl = GE.WebUI.SiteSettings.Get(SX.WebCore.Resources.Settings.siteBgPath).ToString();
    var faveicon = GE.WebUI.SiteSettings.Get(SX.WebCore.Resources.Settings.siteFaveiconPath).ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@(faveicon!=null?faveicon:"/content/dist/i/faveicon.png")" type="image/png" />

    <link href="~/Content/dist/css/site.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body @(bgUrl != null ? "style=background-image:url(" + bgUrl + ")" : null)>
    @Html.Partial(MVC.Shared.Views._NavBar)
    <div class="wrapper">
        @Html.Action(MVC.Games.GameList())
        <div class="container">
            @if (ViewBag.H1 != null)
            {
                <h1 @(ViewBag.H1CssClass != null ? "class=" + ViewBag.H1CssClass : null)>@ViewBag.H1</h1>
            }
            @RenderBody()
        </div>
    </div>
    @Html.Partial(MVC.Shared.Views._Footer)

    <script src="~/Content/dist/js/site.min.js"></script>
    <script type="text/javascript">
        var $WIDTH_SX = 768;

        resizeFooter();
        $(window).resize(function () {
            resizeFooter();
        });

        $('#game-list').geGameMenu();

        function resizeFooter() {
            var $footer = $('footer');
            var h = $footer.height();
            $footer.css({
                'position': 'absolute'
            });
            $('body').css('margin-bottom', h + 'px');
        }
    </script>
    @RenderSection("scripts", false)
</body>

</html>