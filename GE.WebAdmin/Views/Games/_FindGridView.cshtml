@model VMGame[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMGame)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<VMGame>
        {
            UpdateTargetId = "grid-pictures",
            Data = Model,
            Columns = new SxExtantions.SxGridViewColumn<VMGame>[]{
            new SxExtantions.SxGridViewColumn<VMGame>{FieldName="Title", Caption="Наименование" }
        },
            PagerInfo = pagerInfo,
            Filter = filter,
            SortDirections = sortDirections,
            EnableEditing = false,
            EnableCreate = false,
            Mode=SxExtantions.SxGridViewMode.Lookup,
            FuncDataUrl=()=>Url.Action(MVC.Games.FindGridView()),
            FuncGetId=(x)=>x.Id,
            FuncTextField=()=> "Title"
        },
            new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )