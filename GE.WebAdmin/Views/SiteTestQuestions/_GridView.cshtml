@model SxVMSiteTestQuestion[]
@{
    Layout = null;
    var testId = (ViewBag.Filter as SxFilter).AddintionalInfo[0];
}


@Html.SxGridView(Model,
        new SxExtantions.SxGridViewSettings<SxVMSiteTestQuestion>
        {
            Columns = new SxExtantions.SxGridViewColumn<SxVMSiteTestQuestion>[]{
                new SxExtantions.SxGridViewColumn<SxVMSiteTestQuestion>{FieldName="Text", Caption="Текст"}
            },
            DataAjaxUrl = "/sitetestquestions?testId="+ testId,
            EnableCreating=true,
            CreateRowUrl= "/sitetestquestions/edit?testId=" + testId,
            EnableDeleting =true,
            DeleteRowUrl = x => { return "/sitetestquestions/delete/" + x.Id+"?testId="+testId; },
            EnableEditing=true,
            EditRowUrl = x => { return "/sitetestquestions/edit/"+x.Id+"?testId=" + testId; }
        }
    )