@model VMGameMenuImgGameMaterial[]
@{
    VMGameMenuImgGameMaterial item = null;
    var caption = ViewData["Caption"];
}
@if (Model.Any())
{
    <div class="glm">
        <h4 class="glm__header">@caption</h4>
        <ul>
            @for (int i = 0; i < Model.Length; i++)
            {
                item = Model[i];
                <li>
                    <span class="time">@item.DateOfPublication.ToString("dd.MM.yyyy")</span><br />
                    <a href="@item.GetUrl(Url)" target="_blank">@item.Title</a>
                </li>
            }
        </ul>
    </div>
}