@model VMForumPart[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMForumPart)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
    new SxExtantions.SxGridViewSettings<VMForumPart>
    {
        UpdateTargetId = "grid-forum-parts",
        Data = Model,
        Columns = new SxExtantions.SxGridViewColumn<VMForumPart>[]{
            new SxExtantions.SxGridViewColumn<VMForumPart>{FieldName="Title", Caption="Заголовок раздела"},
            new SxExtantions.SxGridViewColumn<VMForumPart>{FieldName="Html", Caption="Описание раздела"},
        },
        PagerInfo=pagerInfo,
        Filter = filter,
        SortDirections = sortDirections
    },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )