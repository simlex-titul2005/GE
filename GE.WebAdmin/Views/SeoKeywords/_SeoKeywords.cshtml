@model VMSeoKeywordList

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
            Ключевые слова <a class="btn btn-default btn-sm" href="@Url.Action(MVC.SeoKeywords.Edit(Model.SeoInfoId))">Добавить</a>
        </h4>
    </div>
    <div class="panel-body">
        <ul class="list-group">
            @for (int i = 0; i < Model.Keywords.Length; i++)
            {
                var item = Model.Keywords[i];
                <li class="list-group-item">
                    <span>@item.Value</span>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="@Url.Action(MVC.SeoKeywords.Edit(Model.SeoInfoId, item.Id))">Изменить</a>
                    </div>
                </li>
            }
        </ul>
    </div>

</div>
