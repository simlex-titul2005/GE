@model VMClick[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMClick)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
                    new SxExtantions.SxGridViewSettings<VMClick>
                    {
                        UpdateTargetId = "grid-clicks",
                        Data = Model,
                        Columns = new SxExtantions.SxGridViewColumn<VMClick>[]{
            new SxExtantions.SxGridViewColumn<VMClick>{FieldName="DateCreate", Caption="Дата"},
            new SxExtantions.SxGridViewColumn<VMClick>{FieldName="UrlRef", Caption="Исходящий адрес"},
            new SxExtantions.SxGridViewColumn<VMClick>{FieldName="RawUrl", Caption="Адрес назначения"},
            new SxExtantions.SxGridViewColumn<VMClick>{FieldName="ClickTypeName", Caption="Статистика клика"}
        },
                        PagerInfo=pagerInfo,
                        Filter = filter,
                        SortDirections = sortDirections,
                        EnableEditing = false,
                        EnableCreate = false
                    },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )