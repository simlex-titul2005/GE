@model VMRole[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMRole)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
    new SxExtantions.SxGridViewSettings<VMRole>
    {
        UpdateTargetId = "grid-roles",
        Data = Model,
        Columns = new SxExtantions.SxGridViewColumn<VMRole>[]{
            new SxExtantions.SxGridViewColumn<VMRole>{FieldName="Name", Caption="Роль"},
            new SxExtantions.SxGridViewColumn<VMRole>{FieldName="Description", Caption="Описание"},
        },
        PagerInfo=pagerInfo,
        Filter = filter,
        SortDirections = sortDirections
    },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )