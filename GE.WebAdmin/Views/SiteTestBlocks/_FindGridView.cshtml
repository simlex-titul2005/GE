@model SxVMSiteTestBlock[]
@{
    Layout = null;
    var testId = ViewBag.SiteTestId;
}


@Html.SxGridView(Model,
        new SxExtantions.SxGridViewSettings<SxVMSiteTestBlock>
        {
            Columns = new SxExtantions.SxGridViewColumn<SxVMSiteTestBlock>[]{
                new SxExtantions.SxGridViewColumn<SxVMSiteTestBlock>{FieldName="Title", Caption="Заголовок" }
            },
            DataAjaxUrl = "/sitetestblocks/findgridview?testId="+ testId,
            RowId = x => { return x.Id.ToString(); },
            RowText = x => { return x.Title; }
        }
    )