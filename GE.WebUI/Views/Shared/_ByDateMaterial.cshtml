@model GE.WebUI.Models.Abstract.VMLastMaterial[]
@{
    Layout = null;
    var itemsCount = 3;
}

<div class="by-date-m">
    <h3>Другие новости</h3>
    <div class="row">
        @for (int i = 0; i < itemsCount; i++)
        {
            <div class="col-md-4">
                @if (i < Model.Length)
                {
                    var item = Model[i];
                    <div class="content @(i==0?"first":i==itemsCount-1?"last":null)">
                        @if(i==0 || i== itemsCount - 1)
                        {
                            <div class="arrow hidden-xs">
                                <a href="javscript:void(0)" data-ajax-url="@Url.Action(MVC.News.ByDateMaterial(item.ModelCoreType, item.DateOfPublication))" data-ajax="true" data-ajax-update="#by-date-mat" data-ajax-method="get"><i class="fa @(i==0?"fa-arrow-left":"fa-arrow-right")"></i></a>
                            </div>
                            <div class="arrow hidden-lg hidden-sm hidden-md">
                                <a href="javscript:void(0)" data-ajax-url="@Url.Action(MVC.News.ByDateMaterial(item.ModelCoreType, item.DateOfPublication))" data-ajax="true" data-ajax-update="#by-date-mat" data-ajax-method="get"><i class="fa @(i==0?"fa-arrow-up":"fa-arrow-down")"></i></a>
                            </div>
                        }
                        <div class="date">@item.DateOfPublication</div>
                        <h4 class="title"><a href="@item.Url(Url)">@item.Title</a></h4>
                        <div class="fw">@item.Foreword</div>
                        <div class="author">
                            Автор: <strong>@item.Author.NikName</strong>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>