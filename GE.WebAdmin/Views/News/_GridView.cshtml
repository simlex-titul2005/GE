@model VMNews[]
@{
    Layout = null;
}


@Html.SxGridView(Model,
        new SxExtantions.SxGridViewSettings<VMNews>
        {
            Columns = new SxExtantions.SxGridViewColumn<VMNews>[]{
                new SxExtantions.SxGridViewColumn<VMNews>{FieldName="DateCreate", Caption="Дата создания"},
                new SxExtantions.SxGridViewColumn<VMNews>{FieldName="DateOfPublication", Caption="Дата публикации"},
                new SxExtantions.SxGridViewColumn<VMNews>{FieldName="Title", Caption="Заголовок"},
                new SxExtantions.SxGridViewColumn<VMNews>{FieldName="SeoTagsId", Caption="Инфо", Template=(m)=> {
                    return !m.SeoTagsId.HasValue? "<i class=\"text-danger\">не заданы теги seo</i>":null;
                } },
                new SxExtantions.SxGridViewColumn<VMNews>{FieldName="Show", Caption="Показывать", Template=(m)=> {
                    return m.Show? "Да":"Нет";
                } }
            },
            DataAjaxUrl = "/news",
            EnableCreating = true,
            CreateRowUrl = "/news/edit",
            EnableEditing = true,
            EditRowUrl = x => { return "/news/edit/" + x.Id; }
        }
    )