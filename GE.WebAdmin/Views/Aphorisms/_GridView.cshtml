@model VMAphorism[]
@{
    Layout = null;
    string categoryId = ViewBag.CategoryId;
}

@if (categoryId != null)
{
    @Html.SxGV(Model,
                new SxExtantions.SxGVSettings<VMAphorism>
                {
                    Columns = new SxExtantions.SxGvColumn<VMAphorism>[]{
            new SxExtantions.SxGvColumn<VMAphorism>{FieldName="Title", Caption="Заголовок"},
            new SxExtantions.SxGvColumn<VMAphorism>{FieldName="Name", Caption="Автор",Template=(a)=> {
                return a.Author!=null? a.Author.Name:null;
            } },
            new SxExtantions.SxGvColumn<VMAphorism>{FieldName="Html", Caption="Содержание"},
            new SxExtantions.SxGvColumn<VMAphorism>{FieldName="Show", Caption="Показывать", Template=(a)=> {
                return a.Show?"Да":"Нет";
            } }
            },
                    DataAjaxUrl = "/aphorisms?curCat=" + categoryId,
                    EnableCreating=true,
                    CreateRowUrl= "/aphorisms/edit?curCat=" + categoryId+"&mct="+Enums.ModelCoreType.Aphorism,
                    EnableEditing=true,
                    EditRowUrl = x => { return "/aphorisms/edit/"+x.Id+"?curCat=" + categoryId + "&mct=" + Enums.ModelCoreType.Aphorism; }
                }
        )
}