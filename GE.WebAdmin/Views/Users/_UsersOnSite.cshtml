@model VMUser[]

@if (Model.Any())
{
    <div class="row">
        @for (int i = 0; i < Model.Length; i++)
        {
            var item = Model[i];
            <div class="col-md-3">
                <div class="us-on-site">
                    <ul class="list-inline">
                        <li>
                            @if (item.AvatarId.HasValue)
                        {
                            <img class="img-circle avatar" alt="@item.NikName" src="@Url.Action(MVC.Pictures.Picture((Guid)item.AvatarId))" />
                        }

                    </li>
                    <li>
                        <div><strong>@item.NikName</strong></div>
                        <div><a href="mailto:@item.Email">@item.Email</a></div>
                    </li>
                </ul>
            </div>
        </div>
        }
    </div>
}
