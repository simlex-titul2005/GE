@model VMHumor[]
@{
    Layout = null;
}


@Html.SxGridView(Model,
        new SxExtantions.SxGridViewSettings<VMHumor>
        {
            Columns = new SxExtantions.SxGridViewColumn<VMHumor>[]{
                new SxExtantions.SxGridViewColumn<VMHumor>{FieldName="DateCreate", Caption="Дата создания"},
                new SxExtantions.SxGridViewColumn<VMHumor>{FieldName="DateOfPublication", Caption="Дата публикации"},
                new SxExtantions.SxGridViewColumn<VMHumor>{FieldName="Title", Caption="Заголовок"},
                new SxExtantions.SxGridViewColumn<VMHumor>{FieldName="SeoTagsId", Caption="Инфо", Template=(m)=> {
                    return !m.SeoTagsId.HasValue? "<i class=\"text-warning\" data-toggle=\"tooltip\" title=\"Если не заданы теги для SEO, они установяться программно на основе заголовка и дополнительных метаданных страницы\">не заданы теги seo</i>":null;
                } },
                new SxExtantions.SxGridViewColumn<VMHumor>{FieldName="Show", Caption="Показывать", Template=(m)=> {
                    return m.Show? "Да":"Нет";
                } }
            },
            DataAjaxUrl = Url.Action("Index", "Humor"),
            EnableCreating = true,
            CreateRowUrl = Url.Action("Edit", "Humor"),
            EnableEditing = true,
            EditRowUrl = x => { return Url.Action("Edit", "Humor", new { id=x.Id}); },
            RowCssClass = x => { return !x.Show ? "warning" : null; },
            ShowPagerInfo=true
        }
    )