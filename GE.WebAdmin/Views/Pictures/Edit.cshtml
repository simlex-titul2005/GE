@model VMEditPicture

<h2>
    @(Model.Id == Guid.Empty ? "Добавить фото" : "Редактировать фото")
</h2>

@using (Html.BeginForm("Edit", "Pictures", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.Id)

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(x => x.Width)
                @Html.EditorFor(x => x.Width, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Width)
            </div>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default">Добавить</button>
        @Html.RouteLink("Назад", new { controller = "Pictures", action = "Index" }, new { @class = "btn btn-default" })
    </div>
}
