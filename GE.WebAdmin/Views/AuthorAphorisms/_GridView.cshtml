@model VMAuthorAphorism[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMAuthorAphorism)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<VMAuthorAphorism>
        {
            UpdateTargetId = "grid-author-ap",
            Data = Model,
            Columns = new SxExtantions.SxGridViewColumn<VMAuthorAphorism>[]{
                new SxExtantions.SxGridViewColumn<VMAuthorAphorism>{FieldName="Name", Caption="Имя"},
                new SxExtantions.SxGridViewColumn<VMAuthorAphorism>{FieldName="PictureId", Caption="Фото", Template=(a)=> {
                    return a.PictureId.HasValue? string.Format("<img class=\"img-circle\" alt=\"{0}\" src=\"{1}\" />", a.Name, Url.Action(MVC.Pictures.Picture((Guid)a.PictureId))):null;
                } },
            },
            PagerInfo = pagerInfo,
            Filter = filter,
            SortDirections = sortDirections
        },
            new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )