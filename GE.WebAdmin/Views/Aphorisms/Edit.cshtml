@model VMEditAphorism
@{
    var isNew = Model.Id == 0;
    ViewBag.Title = isNew ? "Добавить афоризм" : "Редактирование афоризма";
}

<h2>@ViewBag.Title</h2>
<br />
<form method="post" action="@Url.Action(MVC.Aphorisms.Edit())">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.Category)
        @Html.EditorFor(x => x.Category, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите категорию" } })
        @Html.ValidationMessageFor(x => x.Category)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Author)
        @Html.EditorFor(x => x.Author, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите автора" } })
        @Html.ValidationMessageFor(x => x.Author)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Html)
        @Html.EditorFor(x => x.Html, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите контент" } })
        @Html.ValidationMessageFor(x => x.Html)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">@(isNew ? "Добавить" : "Сохранить")</button>
        <a href="@Url.Action(MVC.Aphorisms.Index())" class="btn btn-default">Назад</a>
    </div>
</form>

@section scripts{
    <script type="text/javascript" src="~/bower_components/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        if (CKEDITOR.instances['Html']) {
            CKEDITOR.remove(CKEDITOR.instances['Html']);
        }
        CKEDITOR.replace('Html', { height: 400 });
    </script>
}
