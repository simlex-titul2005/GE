@model VMSiteLogoSettings
@{
    ViewBag.Title = "Логотип сайта";
    var message = TempData["EditEmptyGameMessage"];
}
<h2>@ViewBag.Title</h2>
<br />
@if (message != null)
{
    <p class="text-success">@message</p>
}
<form method="post" action="@Url.Action(MVC.Settings.EditSiteLogo())">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.OldPath)

    <div class="row">
        <div class="col-md-12">
            @Html.LabelFor(x => x.Path, new { @class = "control-label" })
            @Html.EditorFor(x => x.Path, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите путь к изображению" } })
            @Html.ValidationMessageFor(x => x.Path)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</form>