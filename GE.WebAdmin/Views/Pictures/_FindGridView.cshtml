@model VMPicture[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMPicture)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<VMPicture>
        {
            UpdateTargetId = "grid-pictures",
            Data = Model,
            Columns = new SxExtantions.SxGridViewColumn<VMPicture>[]{
            new SxExtantions.SxGridViewColumn<VMPicture>{FieldName="Caption", Caption="Картинка" },
            new SxExtantions.SxGridViewColumn<VMPicture>{FieldName="Width", Caption="Ширина" },
            new SxExtantions.SxGridViewColumn<VMPicture>{FieldName="Height", Caption="Высота" }
        },
            PagerInfo = pagerInfo,
            Filter = filter,
            SortDirections = sortDirections,
            EnableEditing = false,
            EnableCreate = false,
            Mode = SxExtantions.SxGridViewMode.Lookup,
            FuncDataUrl = () => Url.Action(MVC.Pictures.FindGridView()),
            FuncGetId = (x) => x.Id,
            FuncTextField = () => "Caption"
        },
            new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )