@model dynamic[]
@{
    Layout = null;
    var amount = 3;
    dynamic item;
}

@if (Model.Any())
{
    <div class="random-test">
        <h2 class="header">Проверьте свои знания</h2>
        <br />
        <div class="row">
            @for (int i = 0; i < amount; i++)
            {
                <div class="col-md-4">
                    @if (i < Model.Length)
                    {
                        item = Model[i];
                        <div class="content">
                            <h4>@item.Title</h4>
                            <br />
                            <p>@item.Description</p>
                            <div class="btn-block">
                                <a href="@Url.Action("Details", new { controller="SiteTests", titleUrl= (string)item.TitleUrl})" class="btn btn-default btn-sm">Пройти тест <i class="fa fa-angle-double-right"></i></a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}
