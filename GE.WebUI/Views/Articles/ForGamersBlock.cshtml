            <div class="col-md-3">
                <h3>Категории</h3>
                <ul class="games">
                    @for (int i = 0; i < Model.GameLength; i++)
                    {
                        var game = Model.Games[i];
                        <li>
                            <a href="#" rel="noreferrer">
                                <figure>
                                    <img alt="@game.Title" src="@Url.Action(MVC.Pictures.Picture(game.FrontPictureId, height:80))" />
                                    <h4>@game.Title</h4>
                                    <span class="desc">@game.Description</span>
                                </figure>
                            </a>
                            <a href="#" class="link">Кликнуть, чтобы открыть новую вкладку со статьями по игре @game.Title</a>
                            <ul class="dropdown">
                                @for (int y = 0; y < game.ArticleTypeLength; y++)
                                {
                                    var aType = game.ArticleTypes[y];
                                    <li>
                                        <a href="#">Показать @aType.Description в блоке просмотра</a>
                                    </li>
                                }
                            </ul>

                        </li>
                    }
                </ul>
            </div>
            <div class="col-md-9">
                <h3>Статьи</h3>
                <div class="materials box">
