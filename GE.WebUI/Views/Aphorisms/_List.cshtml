@model VMAphorism[]
@{
    Layout = null;
    var author = (VMAuthorAphorism)ViewData["Author"];
    var category = (string)ViewData["Category"];
    string heder = null;
    if (category != null)
    {
        heder = string.Format("Другие высказывания в категории {0}", category);
    }
    else
    {
        heder = string.Format("{0}. Другие высказывания", author != null ? author.Name : "Аноним");
    }
}
<div class="ap-list">
    <h2 class="header">@heder</h2>

    <ul>
        @for (int i = 0; i < Model.Length; i++)
            {
                var a = Model[i];
            <li>
                <h3><a href="@Url.Action(MVC.Aphorisms.Details(categoryId: a.CategoryId, titleUrl: a.TitleUrl))">@a.Title</a></h3>
                <div>@a.Html</div>
            </li>
        }
    </ul>
</div>