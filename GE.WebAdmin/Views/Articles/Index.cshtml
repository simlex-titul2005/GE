@model VMArticle[]
@{
    ViewBag.Title = "Index";
}

@Html.SxGridView(
    Model,
    new SX.WebCore.HtmlHelpers.Extantions.SxGridViewSettings
    {
        Columns = new string[] { "Id", "DateCreate", "Title", "Html" },
        ShowRowMenu = true,
        EnableSorting=true,
        EnableEditing=true
    },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )