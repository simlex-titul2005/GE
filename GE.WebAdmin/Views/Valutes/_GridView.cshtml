@model SxVMValute[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (SxVMValute)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<SxVMValute>
        {
            UpdateTargetId = "grid-valutes",
            Data = Model,
            Columns = new SxExtantions.SxGridViewColumn<SxVMValute>[]{
            new SxExtantions.SxGridViewColumn<SxVMValute>{FieldName="Id"},
            new SxExtantions.SxGridViewColumn<SxVMValute>{FieldName="NumCode"},
            new SxExtantions.SxGridViewColumn<SxVMValute>{FieldName="CharCode"},
            new SxExtantions.SxGridViewColumn<SxVMValute>{FieldName="Nominal"},
            new SxExtantions.SxGridViewColumn<SxVMValute>{FieldName="Name"},
            new SxExtantions.SxGridViewColumn<SxVMValute>{FieldName="Value"},
        },
            PagerInfo = pagerInfo,
            Filter = filter,
            SortDirections = sortDirections,
            EnableEditing = false,
            EnableCreate = false
        },
            new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )