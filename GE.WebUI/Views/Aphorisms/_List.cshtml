@model VMAphorism[]
@{
    Layout = null;
    var author = (string)ViewData["Author"];
    var category = (string)ViewData["Category"];
    string header = null;
    if (category != null)
    {
        header = string.Format("Другие высказывания в категории {0}", category);
    }
    else if (category == null && author != null)
    {
        header = string.Format("{0}. Другие высказывания", author);
    }
}
<div class="ap-list">
    @if (header != null)
    {
        <h2 class="header">@header</h2>
    }

    <ul>
        @for (int i = 0; i < Model.Length; i++)
            {
                var a = Model[i];
            <li>
                <h3><a href="@Url.Action(MVC.Aphorisms.Details(categoryId: a.CategoryId, titleUrl: a.TitleUrl))">@a.Html</a></h3>
                <div class="author">@(a.Author!=null && a.Author.Name!=null?a.Author.Name:"Аноним")</div>
            </li>
        }
    </ul>
</div>