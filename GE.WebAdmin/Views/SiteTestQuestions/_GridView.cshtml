@model SxVMSiteTestQuestion[]
@{
    Layout = null;
}


@Html.SxGridView(Model,
        new SxExtantions.SxGridViewSettings<SxVMSiteTestQuestion>
        {
            Columns = new SxExtantions.SxGridViewColumn<SxVMSiteTestQuestion>[]{
                new SxExtantions.SxGridViewColumn<SxVMSiteTestQuestion>{FieldName="DateCreate", Caption="Дата создания"},
                new SxExtantions.SxGridViewColumn<SxVMSiteTestQuestion>{FieldName="TestTitle", Caption="Тест"},
                new SxExtantions.SxGridViewColumn<SxVMSiteTestQuestion>{FieldName="BlockTitle", Caption="Блок"},
                new SxExtantions.SxGridViewColumn<SxVMSiteTestQuestion>{FieldName="Text", Caption="Текст"},
                new SxExtantions.SxGridViewColumn<SxVMSiteTestQuestion>{FieldName="IsCorrect", Caption="Корректность",Template= (q)=> {
                    return q.IsCorrect?"Да":"Нет";
                } }
            },
            EnableCreating = true,
            CreateRowUrl = "/sitetestquestions/edit/",
            EnableEditing = true,
            EditRowUrl = (x) => { return "/sitetestquestions/edit/" + x.Id; },
            DataAjaxUrl = "/sitetestquestions"
        }
    )