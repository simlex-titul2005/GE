@model VMSiteTestBlock[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMSiteTestBlock)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<VMSiteTestBlock>
        {
            UpdateTargetId = "grid-site-test-block",
            Data = Model,
            Columns = new SxExtantions.SxGridViewColumn<VMSiteTestBlock>[]{
            new SxExtantions.SxGridViewColumn<VMSiteTestBlock>{FieldName="Title", Caption="Заголовок" }
        },
            PagerInfo = pagerInfo,
            Filter = filter,
            SortDirections = sortDirections,
            EnableEditing = false,
            EnableCreate = false,
            Mode=SxExtantions.SxGridViewMode.Lookup,
            FuncDataUrl=()=>Url.Action(MVC.SiteTestBlocks.FindGridView()),
            FuncGetId=(x)=>x.Id,
            FuncTextField=()=> "Title"
        },
            new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )