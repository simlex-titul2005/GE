@model VMMenu[]
@{
    Layout = null;
    var pagerInfo = ViewBag.PagerInfo;
    var filter = ViewBag.Filter != null ? (VMMenu)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}


@Html.SxGridView(
        new SxExtantions.SxGridViewSettings<VMMenu>
    {
        UpdateTargetId = "grid-menues",
        Data = Model,
        Columns = new SxExtantions.SxGridViewColumn<VMMenu>[]{
            new SxExtantions.SxGridViewColumn<VMMenu>{FieldName="Name", Caption="Наименование"},
            new SxExtantions.SxGridViewColumn<VMMenu>{FieldName="Id", Caption="Идентификатор"}
        },
        PagerInfo=pagerInfo,
        Filter = filter,
        SortDirections = sortDirections
    },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )