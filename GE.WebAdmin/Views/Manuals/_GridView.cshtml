@model SxVMManual[]
@{
    Layout = null;
}


@Html.SxGridView(Model,
    new SxExtantions.SxGridViewSettings<SxVMManual>
    {
        Columns = new SxExtantions.SxGridViewColumn<SxVMManual>[]{
            new SxExtantions.SxGridViewColumn<SxVMManual>{FieldName="Title", Caption="Заголовок"},
            new SxExtantions.SxGridViewColumn<SxVMManual>{FieldName="CategoryId", Caption="Инфо", Template=(m)=> {
                return string.IsNullOrEmpty(m.CategoryId) ?string.Format("<span class=\"text-danger\">{0}</span>", "Не определена категория"):null;
            } }
        },
        DataAjaxUrl = Url.Action("Index", "Manuals"),
        EnableCreating=true,
        CreateRowUrl= "/manuals/edit",
        EnableEditing=true,
        EditRowUrl = x => { return "/manuals/edit/" + x.Id; },
        ShowPagerInfo=true

    }
 )