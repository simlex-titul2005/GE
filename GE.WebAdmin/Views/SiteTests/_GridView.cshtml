@model SxVMSiteTest[]
@{
    Layout = null;
}


@Html.SxGridView(Model,
        new SxExtantions.SxGridViewSettings<SxVMSiteTest>
        {
            Columns = new SxExtantions.SxGridViewColumn<SxVMSiteTest>[]{
                new SxExtantions.SxGridViewColumn<SxVMSiteTest>{FieldName="DateCreate", Caption="Дата создания"},
                new SxExtantions.SxGridViewColumn<SxVMSiteTest>{FieldName="Title", Caption="Заголовок"},
                new SxExtantions.SxGridViewColumn<SxVMSiteTest>{FieldName="Description", Caption="Описание"},
                new SxExtantions.SxGridViewColumn<SxVMSiteTest>{FieldName="Type", Caption="Тип теста"},
                new SxExtantions.SxGridViewColumn<SxVMSiteTest>{FieldName="Show", Caption="Показывать", Template=x=> { return x.Show?"Да":"Нет"; } }
            },
            EnableCreating = true,
            CreateRowUrl = Url.Action("Edit", "Sitetests"),
            EnableEditing = true,
            EditRowUrl = (x) => { return Url.Action("Edit", "Sitetests", new { id=x.Id}); },
            DataAjaxUrl = Url.Action("Index", "Sitetests"),
            RowCssClass = x => { return !x.Show ? "warning" : null; },
            ShowPagerInfo=true
        }
    )