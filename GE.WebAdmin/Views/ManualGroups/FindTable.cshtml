@model SxExtantions.SxPagedCollection<VMManualGroup>
@{
    Layout = null;
}
<table class="table table-condensed table-responsive table-hover table-bordered">
    <thead>
        <tr>
            <th>
                <input type="text" />
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Length; i++)
        {
            var item = Model.Collection[i];
            <tr data-id="@item.Id">
                <td data-text-field>@item.Title</td>
            </tr>
        }
    </tbody>
    @if (Model.PagerInfo.TotalPages > 1)
    {
        <tfoot>
            <tr>
                <td colspan="1">
                    @Html.SxPager(Model.PagerInfo)
                </td>
            </tr>
        </tfoot>
    }
</table>
