@model SxVMComment[]

@if (Model.Any())
{
    <div class="comments">
        @for (int i = 0; i < Model.Length; i++)
        {
            var item = Model[i];
            @Html.DisplayFor(x=>item)
        }
    </div>
}
else
{
    <p class="lead text-warning">Пока комментариев нет. Вы будете первым!</p>
} 