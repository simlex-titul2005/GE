@model VMEditArticleType

<h2>
    @(Model.Id == 0 ? "Добавить тип статьи" : "Редактировать тип статьи")
</h2>

@using (Html.BeginForm("Edit", "ArticleTypes", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.DateCreate)

    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(x => x.GameId)
                <div class="input-group">
                    <span class="input-group-btn">
                        @Html.RouteLink("Игры", new { action = "Index" }, new { @class = "btn btn-default" })
                    </span>
                    @Html.EditorFor(x => x.GameId, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(x => x.GameId)
            </div>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default">Добавить</button>
        @Html.RouteLink("Назад", new { controller = "ArticleTypes", action = "Index" }, new { @class = "btn btn-default" })
    </div>
}
