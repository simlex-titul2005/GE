@model VMEditArticle

@using (Html.BeginForm("Edit", "Articles", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.DateCreate)

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(x => x.Title)
                @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Title)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(x => x.Show)
                @Html.EditorFor(x => x.Show, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Show)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(x => x.ArticleTypeId)
                <div class="input-group">
                    <span class="input-group-btn">
                        @Html.RouteLink("Типы статей", new { controller = "ArticleTypes", action = "Index" }, new { @class = "btn btn-default" })
                    </span>
                    @Html.EditorFor(x => x.ArticleTypeId, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(x => x.ArticleTypeId)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(x => x.GameId)
                @Html.EditorFor(x => x.GameId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.GameId)
            </div>
        </div>
    </div>
}
