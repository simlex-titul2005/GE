@model VMGame[]
@{
    Layout = null;
}


@Html.SxGridView(Model,
        new SxExtantions.SxGridViewSettings<VMGame>
        {
            Columns = new SxExtantions.SxGridViewColumn<VMGame>[]{
            new SxExtantions.SxGridViewColumn<VMGame>{FieldName="Title", Caption="Наименование" }
        },
            DataAjaxUrl = Url.Action("FindGridView", "Games"),
            RowId = x => { return x.Id.ToString(); },
            RowText = x => { return x.Title; }
        }
)