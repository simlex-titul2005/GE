@model ISxViewModel[]
@{
    var filter = ViewBag.Filter != null ? (ISxViewModel)ViewBag.Filter : null;
    var sortDirections = ViewBag.Order != null ? (Dictionary<string, SxExtantions.SortDirection>)ViewBag.Order : null;
}

@Html.SxGridView(
                    new SxExtantions.SxGridViewSettings<SX.WebCore.Abstract.ISxViewModel>
    {
        Data = Model,
        Columns = new SxExtantions.SxGridViewColumn[]{
            new SxExtantions.SxGridViewColumn{FieldName="DateCreate", Caption="Дата создания"},
            new SxExtantions.SxGridViewColumn{FieldName="Title", Caption="Заголовок"},
        },
        Filter = filter,
        SortDirections = sortDirections
    },
        new { @class = "table table-condensed table-bordered table-responsive table-striped" }
    )