@model VMProjectStep
@{ 
    Layout = null;
}
<div id="pstep-@Model.Id" class="panel panel-default">
    <div class="panel-heading"><strong>@Model.Title</strong></div>
    <div class="panel-body">
        <p>@Model.Foreword</p>
    </div>
    <div class="panel-footer">
        <ul class="list-unstyles list-inline text-right">
            <li>
                <a class="btn btn-xs btn-default" href="@Url.Action(MVC.ProjectSteps.Edit(id: Model.Id, pid: Model.ParentStepId))">Править</a>
            </li>
            <li>
                <a class="btn btn-xs btn-default" href="@Url.Action(MVC.ProjectSteps.Edit(pid: Model.Id))">Добавить</a>
            </li>
        </ul>
    </div>
</div>