@model VMArticle[]
@{
    Layout = null;
}


@Html.SxGridView(Model,
    new SxExtantions.SxGridViewSettings<VMArticle>
    {
        Columns = new SxExtantions.SxGridViewColumn<VMArticle>[]{
            new SxExtantions.SxGridViewColumn<VMArticle>{FieldName="DateCreate", Caption="Дата создания"},
            new SxExtantions.SxGridViewColumn<VMArticle>{FieldName="DateOfPublication", Caption="Дата публикации"},
            new SxExtantions.SxGridViewColumn<VMArticle>{FieldName="Title", Caption="Заголовок"},
            new SxExtantions.SxGridViewColumn<VMArticle>{FieldName="SeoTagsId", Caption="Инфо", Template=(m)=> {
                return !m.SeoTagsId.HasValue? "<i class=\"text-danger\">не заданы теги seo</i>":null;
            } },
            new SxExtantions.SxGridViewColumn<VMArticle>{FieldName="Show", Caption="Показывать", Template=(m)=> {
                return m.Show? "Да":"Нет";
            } }
        },
        DataAjaxUrl="/articles",
        EnableCreating=true,
        CreateRowUrl="/articles/edit",
        EnableEditing=true,
        EditRowUrl = x => { return "/articles/edit/" + x.Id; }
    }
    )